  include post-tile

  // Posts

  .py4.bg-white
    .container
      .clearfix
        .col.col-12
          h2.gray6.mb3.h--section Latest Posts
      //.clearfix
        .col.col-12
          mixin post-tile('making-sechelt')
      .clearfix
        .col.col-12
          mixin post-tile('webvr-lands-in-nightly')
      .clearfix
        .col.col-12
          mixin post-tile('quick-vr-prototypes')
